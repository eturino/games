{
  "name": "@eturino/games",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "codegen": "graphql-let",
    "dev": "yarn codegen && next dev",
    "build": "yarn codegen && next build",
    "test": "yarn codegen && jest",
    "test:coverage": "jest --coverage",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write \"{lib,pages,src,public}/**/*\"",
    "lint": "eslint \"{lib,pages,src,public}/**/*.{ts,tsx,js,html}\"",
    "fix": "yarn format && yarn lint --fix",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "./{lib,pages,src,public}/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.1.3",
    "@auth0/nextjs-auth0": "^0.16.0",
    "@graphql-tools/load-files": "6.0.18",
    "@graphql-tools/merge": "6.0.18",
    "@graphql-tools/schema": "6.0.18",
    "@plandek-utils/ts-clean-key": "^2.2.0",
    "@theme-ui/preset-swiss": "^0.3.5",
    "apollo-server-micro": "^2.16.1",
    "graphql": "15.4.0",
    "lodash": "^4.17.20",
    "nanoid": "^3.1.20",
    "nanoid-dictionary": "^4.1.0",
    "next": "10.0.3",
    "ramda": "^0.27.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "theme-ui": "^0.3.5",
    "ts-enum-util": "^4.0.2",
    "utility-types": "^3.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@graphql-codegen/cli": "^1.17.8",
    "@graphql-codegen/plugin-helpers": "^1.17.8",
    "@graphql-codegen/typescript": "^1.17.8",
    "@graphql-codegen/typescript-operations": "^1.17.8",
    "@graphql-codegen/typescript-react-apollo": "^2.0.6",
    "@graphql-codegen/typescript-resolvers": "^1.17.8",
    "@storybook/addon-actions": "^6.1.11",
    "@storybook/addon-essentials": "^6.1.11",
    "@storybook/addon-links": "^6.1.11",
    "@storybook/react": "^6.1.11",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.19",
    "@types/lodash": "^4.14.167",
    "@types/nanoid": "^2.1.0",
    "@types/nanoid-dictionary": "^4.1.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-test-renderer": "17.0.0",
    "@types/theme-ui": "^0.3.7",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "babel-jest": "26.6.3",
    "babel-loader": "^8.2.2",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "graphql-let": "0.x",
    "graphql-tag": "2.11.0",
    "http-proxy-middleware": "^1.0.6",
    "husky": "^4.2.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.0.10",
    "prettier": "^2.0.2",
    "prettier-plugin-organize-imports": "^1.1.1",
    "react-test-renderer": "17.0.1",
    "typescript": "^4.1.3",
    "yaml-loader": "0.6.0"
  }
}
